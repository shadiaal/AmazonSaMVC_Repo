@model List<AmazonSaMVC.Models.Order>

            <h2>Order History</h2>

            @if (Model.Count == 0)
        {
            <p>No orders found.</p>
        }
        else
        {
            <table border="1">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Order Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Product.Name</td>
                        <td>@order.Quantity</td>
                        <td>@order.OrderDate</td>
                    </tr>
                    }
                </tbody>
            </table>
        }
